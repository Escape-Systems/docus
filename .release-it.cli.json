{
  "git": false,
  "hooks": {
    "before:init": ["pnpm lint", "pnpm typecheck"],
    "after:bump": "cd cli && pnpm build"
  },
  "npm": {
    "publish": true,
    "publishPath": "cli"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./cli/package.json",
      "out": "./cli/package.json"
    }
  }
} 